#!/bin/bash
set -euo pipefail
IFS=$'\n\t'

: "${PURPUR_BUILD:=LATEST}"
: "${PURPUR_DOWNLOAD_URL:=}"

# shellcheck source=start-utils
. "${SCRIPTS:-/}start-utils"
isDebugging && set -x

resultsFile=/data/.purpur.env

if [[ $PURPUR_DOWNLOAD_URL ]]; then
  if ! mc-image-helper install-purpur \
    --output-directory=/data \
    --results-file="$resultsFile" \
    --url="$PURPUR_DOWNLOAD_URL}"; then
      logErrorDownload "from custom Purpur URL"
      exit 1
  fi
else
  args=(
    --output-directory=/data
    --results-file="$resultsFile"
    --version="$VERSION"
  )
  if [[ $PURPUR_BUILD ]]; then
    args+=(--build="$PURPUR_BUILD")
  fi
  if ! mc-image-helper install-purpur "${args[@]}"; then
      logErrorDownload "Purpur"
      exit 1
  fi
fi

grabServerAndExport

# Normalize on Spigot for later operations
export FAMILY=SPIGOT

exec "${SCRIPTS:-/}start-spiget" "$@"
