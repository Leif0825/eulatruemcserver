#!/bin/bash
. "/start-utils"
: "${CONSOLE_IN_NAMED_PIPE:=/tmp/minecraft-console-in}"

if isFalse "${CREATE_CONSOLE_IN_PIPE:-false}"; then
  error "onsole pipe needs to be enabled by setting CREATE_CONSOLE_IN_PIPE to true"
fi


if [ $# = 0 ]; then
  error "Pass console commands as arguments"
  exit 1
fi

if [ ! -p "${CONSOLE_IN_NAMED_PIPE}" ]; then
  error "Named pipe ${CONSOLE_IN_NAMED_PIPE} is missing"
  exit 1
fi

commandSuffix="${CONSOLE_IN_NAMED_PIPE:-/tmp/minecraft-console-in}"

if [ "$(id -u)" = 0 -a $UID != 0 ]; then
  exec $(getCommandFromDistro) minecraft bash -c "echo '$*' > '${commandSuffix}'"
else
  echo "$@" >"${commandSuffix}"
fi
